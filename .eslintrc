{
  "ecmaFeatures": {
    "jsx": true,
    "modules": true
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "mocha": true
  },
  "parser": "babel-eslint",
  "extends": "airbnb",
  "rules": {
    "indent": 2,
    "react/prop-types": 0,
    "strict": [2, "never"],
    "semi": [1, "never"],
    "new-cap": [2, {
      "capIsNewExceptions": ["Server"]
    }],
    "arrow-body-style": 0,
    "comma-dangle": 0,
    "babel/generator-star-spacing": 1,
    "babel/object-shorthand": 1,
    "babel/no-await-in-loop": 1,
    "react/jsx-uses-react": 2,
    "react/jsx-uses-vars": 2,
    "react/react-in-jsx-scope": 2
  },
  "plugins": [
    "babel",
    "react"
  ]
}
